<h1>Change Password</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :password "Current Password" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password "New Password" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>
