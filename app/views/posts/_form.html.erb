<ul>
  <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.input :category_id, collection: Category.order("title")  %>
  <%= f.submit class: "btn btn-success"  %>
<% end %>
